name: odrive_ui
on: 
  push:
    branches: [ main ]

jobs:
  build_windows:
    runs-on: windows-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v2
        with:
            fetch-depth: 0

      - name: Setup Python
        uses: actions/setup-python@v2
        with:
          python-version: '3.9'
          architecture: 'x64'

      - name: Install Dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt
          pip install pyinstaller

      - name: Install PyBind11
        run: |
          python -m pip install pybind11

      - name: Create Executable with PyInstaller
        run: pyinstaller odrive_ui.spec

      - name: Rename file with details
        run: |
          Move-Item -Path .\dist\odrive_ui.exe -Destination .\dist\simpleFOCStudio-windows-x86_64-${{ github.sha }}.exe
        shell: pwsh

      - name: Create Release Tag
        run: |
          git config user.name "github-actions"
          git config user.email "github-actions@github.com"
          $date = Get-Date -Format "yyyyMMddHHmmss"
          $TAG_NAME="v${{ github.ref_name }}-$date"
          echo "TAG_NAME=$TAG_NAME" | Out-File -FilePath $env:GITHUB_ENV -Append
          git tag $TAG_NAME
          git push origin $TAG_NAME
        shell: pwsh

      - name: Release
        uses: softprops/action-gh-release@v1
        with:
          files: ./dist/*.exe
          tag_name: ${{ env.TAG_NAME }}
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
